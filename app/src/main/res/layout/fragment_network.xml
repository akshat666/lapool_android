<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@color/white"
    tools:context="com.troofy.hopordrop.frag.NetworkFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fb_icon"
            android:layout_marginRight="@dimen/right_margin"
            android:id="@+id/fbicn" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Facebook"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:enabled="false"
            android:layout_weight="1"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:visibility="gone">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_work_black_24dp"
            android:layout_marginRight="@dimen/right_margin"
            android:id="@+id/workIcn" />

        <TextView
            android:id="@+id/workEmailID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@color/white"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            android:text="Add work email"
            android:gravity="left|center_vertical"
            android:textSize="15dp"
            android:textStyle="bold"

    />

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:buttonTint="@color/base"
            android:id="@+id/workEmailCheckBox"
            android:layout_weight="1"
            android:checked="false"
            />

    </LinearLayout>

