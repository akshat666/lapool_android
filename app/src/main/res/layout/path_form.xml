<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base"
    android:weightSum="12">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/top_margin"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_weight="2">

        <SearchView
            android:id="@+id/startSrchFld"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/right_margin"
            android:queryHint="@string/enter_start_point"
            android:layout_weight="1"
            android:background="@color/base" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/top_margin"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_weight="2">

        <SearchView
            android:id="@+id/destSrchFld"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/right_margin"
            android:layout_centerHorizontal="true"
            android:queryHint="@string/enter_dest"
            android:layout_weight="1"
            android:background="@color/base" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_weight="2">

        <ToggleButton
            android:text="Mon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/monBtn"
            android:textOn="Mon"
            android:textOff="Mon"
            android:textSize="10dp" />

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/tueBtn"
            android:textOn="Tue"
            android:textOff="Tue"
            android:textSize="10dp" />

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/wedBtn"
            android:textOn="Wed"
            android:textOff="Wed"
            android:textSize="10dp" />

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/thuBtn"
            android:textOn="Thu"
            android:textOff="Thu"
            android:textSize="10dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_weight="2">

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/friBtn"
            android:textOn="Fri"
            android:textOff="Fri"
            android:textSize="10dp" />

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/satBtn"
            android:textOn="Sat"
            android:textOff="Sat"
            android:textSize="10dp" />

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/sunBtn"
            android:textOn="Sun"
            android:textOff="Sun"
            android:textSize="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_weight="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:id="@+id/timeTitleTxt"
            android:text="@string/time"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/hint"
            android:text="00:00"
            android:id="@+id/pathTimeBtn"
            android:layout_marginBottom="@dimen/bottom_margin"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:text="(Get notified when someone is requesting a HOP on your path)"/>


    </LinearLayout>


</LinearLayout>